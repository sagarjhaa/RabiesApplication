@model RabiesApplication.Web.ViewModels.AnimalFormViewModel

@{
    ViewBag.Title = "Animal Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SaveAnimal","Animals")) 
{
    @Html.AntiForgeryToken()
    
    
        <h2>Animal</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col">
                
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                
            </div>
            <div class="col">
                
                    @Html.LabelFor(model => model.SpeciesId, htmlAttributes: new { @class = "control-label col" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.SpeciesId, new SelectList(Model.Species, "Id", "Description"), "Select Species", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SpeciesId, "", new { @class = "text-danger" })
                    </div>
                
            </div>
        </div>

        <div class="row">
            <div class="col">
                
                    @Html.LabelFor(model => model.BreedId, htmlAttributes: new { @class = "control-label col" })

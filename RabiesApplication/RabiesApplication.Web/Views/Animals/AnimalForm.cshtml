            <div class="col">
                
                    @Html.LabelFor(model => model.QuarantineVerification, htmlAttributes: new { @class = "control-label col" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.QuarantineVerification, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.QuarantineVerification, "", new { @class = "text-danger" })
                    </div>
                
            </div>
        </div>

        <div class="row">
            <div class="col">
                
                    <div class="col-md-offset-3 col-md-10">
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.BiteId)
                        <input type="submit" value="Save" class="btn btn-success user-full-width" />
                    </div>
                

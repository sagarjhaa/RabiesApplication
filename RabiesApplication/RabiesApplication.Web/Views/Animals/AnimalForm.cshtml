@model RabiesApplication.Web.ViewModels.AnimalFormViewModel

@{
    ViewBag.Title = "Animal Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SaveAnimal", "Animals"))
{
    @Html.AntiForgeryToken()


    <h2>Animal</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.BiteId)
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="col">

                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="col ">

                @Html.LabelFor(model => model.AnimalOwnerId, htmlAttributes: new { @class = "control-label col" })
                <div class="col form-inline">
                    @Html.DropDownListFor(model => model.AnimalOwnerId, new SelectList(Model.AnimalOwner, "Key", "Value"), "Select Animal Owner", htmlAttributes: new { @class = "form-control" })
                    @Html.ActionLink("Add Owner", "AnimalOwnerForm", "AnimalOwners",new {biteId =Model.BiteId}, htmlAttributes: new { @class = "btn btn-outline-primary" })
                    @Html.ValidationMessageFor(model => model.AnimalOwnerId, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">

                </div>
            </div>


        </div>

        <div class="row">

            <div class="col">

                @Html.LabelFor(model => model.SpeciesId, htmlAttributes: new { @class = "control-label col" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.SpeciesId, new SelectList(Model.Species, "Id", "Description"), "Select Species", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SpeciesId, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="col">

                @Html.LabelFor(model => model.BreedId, htmlAttributes: new { @class = "control-label col" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.BreedId, new SelectList(Model.Breed, "Id", "Description"), "Select Breed", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BreedId, "", new { @class = "text-danger" })
                </div>

            </div>

        </div>




        <div class="row">
            

            <div class="col">

                @Html.LabelFor(model => model.Sex, htmlAttributes: new {@class = "control-label col"})
                <div class="col-md-9">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Sex)
                        @Html.ValidationMessageFor(model => model.Sex, "", new {@class = "text-danger"})
                    </div>
                </div>

            </div>

            <div class="col">

                @Html.LabelFor(model => model.VetId, htmlAttributes: new { @class = "control-label col" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.VetId, new SelectList(Model.Vet, "Id", "FirstName"), "Select Vet", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.VetId, "", new { @class = "text-danger" })
                </div>


            </div>
        </div>



 


        <div class="row">
            <div class="col">

                <div class="col-md-offset-3 col-md-10">
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.BiteId)
                    <input type="submit" value="Save" class="btn btn-success user-full-width" />
                </div>

            </div>
        </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

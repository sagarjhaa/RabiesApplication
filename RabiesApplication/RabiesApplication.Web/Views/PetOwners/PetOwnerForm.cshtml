@model RabiesApplication.Web.ViewModels.PetOwnerViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #animalBox {
        position: relative;
    }
</style>


@using (Html.BeginForm("Save","AnimalOwners")) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="animalBox">
            <div class="form-group">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Animal Information</h3>
                    </div>
                    <div class="panel-body">
                        <p>Animal Name : @Html.DisplayFor(model => model.Animal.Name)</p>
                        <p>Species : @Html.DisplayFor(model => model.Animal.Species.Description)</p>
                        <p>Breed : @Html.DisplayFor(model => model.Animal.Breed.Description)</p>
                        <p>@Html.ActionLink("Edit", "AnimalForm", "Animals", new {biteId = Model.Animal.BiteId, animalId = Model.Animal.Id}, null)</p>
                    </div>
                </div>
            </div>
        </div>

        <h2>Animal Owner Information</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.IsShelter, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.AnimalOwner.IsShelter)
                            @Html.ValidationMessageFor(model => model.AnimalOwner.IsShelter, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6"></div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.FirstName, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AnimalOwner.FirstName, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.AnimalOwner.FirstName, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.LastName, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AnimalOwner.LastName, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.AnimalOwner.LastName, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.Addressline1, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AnimalOwner.Addressline1, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.AnimalOwner.Addressline1, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.Addressline2, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AnimalOwner.Addressline2, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.AnimalOwner.Addressline2, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.CityId, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.AnimalOwner.CityId, new SelectList(Model.Cities, "Id", "CityName"), "Select City", htmlAttributes: new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.AnimalOwner.CityId, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.CountyId, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AnimalOwner.CountyId, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.AnimalOwner.CountyId, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.StateId, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.AnimalOwner.StateId, new SelectList(Model.States, "Id", "StateName"), "Select State", htmlAttributes: new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.AnimalOwner.StateId, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.Zipcode, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AnimalOwner.Zipcode, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.AnimalOwner.Zipcode, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.Contactnumber1, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AnimalOwner.Contactnumber1, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.AnimalOwner.Contactnumber1, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="form-group">
                    @Html.LabelFor(model => model.AnimalOwner.Contactnumber2, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AnimalOwner.Contactnumber2, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.AnimalOwner.Contactnumber2, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-6">
                        @*@Html.HiddenFor(model => model.AnimalOwner.Id)*@
                        @Html.HiddenFor(model => model.AnimalOwner.EmployeeCreatedId)
                        @Html.HiddenFor(model => model.AnimalOwner.RecordCreated)
                        @Html.HiddenFor(model => model.AnimalOwner.Id, new {@Value = Model.Animal.Id})

                        <input type="submit" value="Save" class="btn btn-success user-full-width"/>
                    </div>
                </div>
            </div>
            <div class="col-md-6"></div>
        </div>


    </div>
    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

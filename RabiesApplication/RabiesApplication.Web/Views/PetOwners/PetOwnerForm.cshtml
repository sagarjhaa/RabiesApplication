@model RabiesApplication.Web.ViewModels.PetOwnerViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #animalBox {
        position: relative;
    }
</style>


@using (Html.BeginForm("Save","PetOwners")) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div id="animalBox">
            <div class="form-group">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Animal Information</h3>
                    </div>
                    <div class="panel-body">
                        <p>Animal Name : @Html.DisplayFor(model => model.Animal.Name)</p>
                        <p>Species : @Html.DisplayFor(model => model.Animal.Species.Description)</p>
                        <p>Breed : @Html.DisplayFor(model => model.Animal.Breed.Description)</p>
                        <p>@Html.ActionLink("Edit", "AnimalForm", "Animals", new {biteId = Model.Animal.BiteId, animalId = Model.Animal.Id}, null)</p>
                    </div>
                </div>
            </div>
        </div>

        <h2>Animal Owner Information</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.IsShelter, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.PetOwner.IsShelter)
                            @Html.ValidationMessageFor(model => model.PetOwner.IsShelter, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6"></div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.FirstName, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.PetOwner.FirstName, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.PetOwner.FirstName, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.LastName, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.PetOwner.LastName, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.PetOwner.LastName, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.Addressline1, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.PetOwner.Addressline1, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.PetOwner.Addressline1, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.Addressline2, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.PetOwner.Addressline2, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.PetOwner.Addressline2, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.CityId, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.PetOwner.CityId, new SelectList(Model.Cities, "Id", "CityName"), "Select City", htmlAttributes: new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.PetOwner.CityId, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.CountyId, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.PetOwner.CountyId, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.PetOwner.CountyId, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.StateId, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.DropDownListFor(model => model.PetOwner.StateId, new SelectList(Model.States, "Id", "StateName"), "Select State", htmlAttributes: new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.PetOwner.StateId, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.Zipcode, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.PetOwner.Zipcode, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.PetOwner.Zipcode, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.Contactnumber1, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.PetOwner.Contactnumber1, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.PetOwner.Contactnumber1, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="form-group">
                    @Html.LabelFor(model => model.PetOwner.Contactnumber2, htmlAttributes: new {@class = "control-label col-md-3"})
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.PetOwner.Contactnumber2, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.PetOwner.Contactnumber2, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-6">
                        @*@Html.HiddenFor(model => model.PetOwner.Id)*@
                        @Html.HiddenFor(model => model.PetOwner.EmployeeCreatedId)
                        @Html.HiddenFor(model => model.PetOwner.RecordCreated)
                        @Html.HiddenFor(model => model.PetOwner.Id, new {@Value = Model.Animal.Id})

                        <input type="submit" value="Save" class="btn btn-success user-full-width"/>
                    </div>
                </div>
            </div>
            <div class="col-md-6"></div>
        </div>


    </div>
    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

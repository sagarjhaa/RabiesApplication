@model IEnumerable<RabiesApplication.Models.Animal>


<table class="table table-bordered table-striped">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Breed.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Species.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsVacinated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsQuarantine)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Breed.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Species.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsVacinated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsQuarantine)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "PetForm","Animals", new {biteId = item.BiteId,petid = item.Id},null) |
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
